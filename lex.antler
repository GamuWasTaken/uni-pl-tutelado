// DELETE THIS CONTENT IF YOU PUT COMBINED GRAMMAR IN Parser TAB
lexer grammar ExprLexer;

WS: [ \t\n\r\f]+ -> skip ;
COMMENT : '//'.*?[\n] -> skip;

LET : 'let' ;
FN : 'fn' ;
ID: [@a-zA-Z][a-zA-Z_0-9]* ;
INT : [0-9]+ ;

LINE  : '|' ;
LPAREN : '(' ;
RPAREN : ')' ;
LCURLY : '{' ;
RCURLY : '}' ;
LBRACK : '[' ;
RBRACK : ']' ;
COMMA  : ',' ;

ITER : '->';
EQ : '=' ;
LT : '<' ;
GT : '>' ;
REST: '..';
DOT : '.';

ADD : '+';
MUL : '*';
SUB : '-';
DIV : '/';
MOD : '%';

